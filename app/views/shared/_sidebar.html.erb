<aside id="after-sidebar" class="p-3 w-64 hidden md:block sticky top-[74px] h-[calc(100vh-74px)] overflow-y-auto" data-controller="navbar">
  <div class="flex flex-col items-center mb-10 pt-2">
    <%= link_to profile_show_path(current_user.username_slug), data: { turbo_action: "advance", action: "click->navbar#setActive" } do %>
      <%= image_tag (current_user.avatar.presence || asset_path('logo-watune-en.png')), class: 'rounded-full h-32 w-32' %>
    <% end %>
  </div>
  <ul class="space-y-2">
    <!-- みんなのWave -->
    <li>
      <%= link_to posts_path, id: "sidebar-posts-link", class: "flex items-center space-x-4 p-3 hover:bg-sky-100 rounded-full", data: { turbo_action: "advance", action: "click->navbar#setActive", corresponding_link_id: "header-posts-link" } do %>
        <i class="fas fa-globe text-2xl"></i>
        <h2 class="text-lg font-bold flex-grow">みんなのウェーブ</h2>
      <% end %>
    </li>
    <!-- プロフィール -->
    <li>
      <%= link_to profile_show_path(current_user.username_slug), id: "sidebar-profile-link", class: "flex items-center space-x-4 p-3 hover:bg-sky-100 rounded-full", data: { turbo_action: "advance", action: "click->navbar#setActive", corresponding_link_id: "header-profile-link" } do %>
        <i class="fas fa-user text-2xl"></i>
        <h2 class="text-lg font-bold flex-grow">プロフィール</h2>
      <% end %>
    </li>
    <!-- 通知 -->
    <li>
      <%= link_to notifications_path, id: "sidebar-notifications-link", method: :post, class: "flex items-center space-x-4 p-3 hover:bg-sky-100 rounded-full", data: { turbo_action: "advance", action: "click->navbar#setActive", corresponding_link_id: "header-notifications-link" } do %>
        <div class="relative">
          <i class="fas fa-bell text-2xl"></i>
          <% unread_notifications_count = current_user.received_notifications.unread.count %>
          <% if unread_notifications_count > 0 %>
            <span class="absolute -top-2 -right-2 inline-block w-4 h-4 bg-orange-400 text-white text-xs rounded-full text-center">
              <%= unread_notifications_count %>
            </span>
          <% end %>
        </div>
        <h2 class="text-lg font-bold flex-grow">通知</h2>
      <% end %>
    </li>
    <!-- 通知設定 -->
    <li>
      <%= link_to edit_notification_settings_path, id: "sidebar-settings-link", class: "flex items-center space-x-4 p-3 hover:bg-sky-100 rounded-full", data: { turbo_action: "advance", action: "click->navbar#setActive", corresponding_link_id: "header-settings-link" } do %>
        <i class="fas fa-cog text-2xl"></i>
        <h2 class="text-lg font-bold flex-grow">通知設定</h2>
      <% end %>
    </li>
  </ul>
  <div class="mt-auto py-5">
    <%= link_to t('header.post_audio'),
                  new_post_path,
                  id: "sidebar-new-post-link",
                  class: "flex text-white font-bold text-2xl btn btn-info rounded-full bg-opacity-80",
                  data: { turbo_action: "advance", action: "click->navbar#setActive", corresponding_link_id: "header-new-post-link" } %>
  </div>
</aside>

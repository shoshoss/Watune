<nav id="bottom-navbar" class="sm:hidden fixed bottom-0 left-0 z-10 w-full bg-white border-t transition-opacity duration-300 border-t-1 border-gray-200" data-controller="navbar">
  <ul class="py-1 flex justify-around">
    <li class="flex-1 text-center">
      <%= link_to root_path, id: "bottom-navbar-home-link", data: { action: "click->navbar#setActive", corresponding_link_id: "sidebar-home-link" }, class: "block py-2" do %>
        <i class="fa-solid fa-house text-2xl"></i>
      <% end %>
    </li>
    <li class="flex-1 text-center">
      <%= link_to profile_show_path(username_slug: current_user.username_slug), id: "bottom-navbar-profile-link", data: { action: "click->navbar#setActive", corresponding_link_id: "sidebar-profile-link" }, class: "block py-2" do %>
        <i class="fas fa-user text-2xl"></i>
      <% end %>
    </li>
    <%= render partial: 'shared/notification_link', locals: { 
      link_id: "bottom-navbar-notifications-link", 
      link_class: "block py-2", 
      corresponding_link_id: "sidebar-notifications-link", 
      menu_class: "flex-1 text-center relative", 
      notification_position_class: "top-[0px] right-[36px]",
      show_text: false 
    } %>
    <li class="flex-1 text-center">
      <%= link_to profile_show_path(username_slug: current_user.username_slug, category: 'posts_to_you'), id: "bottom-navbar-messages-link", data: { action: "click->navbar#setActive", corresponding_link_id: "sidebar-messages-link" }, class: "block py-2" do %>
        <i class="fa-regular fa-envelope text-2xl"></i>
      <% end %>
    </li>
    <li class="flex-1 text-center">
      <%= link_to edit_notification_settings_path, id: "bottom-navbar-settings-link", data: { action: "click->navbar#setActive", corresponding_link_id: "sidebar-settings-link" }, class: "block py-2" do %>
        <i class="fas fa-cog text-2xl"></i>
      <% end %>
    </li>
  </ul>
</nav>

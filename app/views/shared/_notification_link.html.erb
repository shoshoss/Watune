<!-- app/views/shared/_notification_link.html.erb -->
<li class="<%= defined?(menu_class) ? menu_class : 'relative' %>" data-controller="notification">
  <%= link_to notifications_path, id: link_id, data: {  turbo_method: :post, active_path: notifications_path }, class: link_class do %>
      <i class="fas fa-bell text-2xl"></i>
      <span class="absolute top-0 right-[20px] inline-block w-4 h-4 bg-orange-400 text-white text-xs rounded-full text-center" data-notification-target="notificationCount" style="<%= current_user.received_notifications.unread.count > 0 ? 'display: block;' : 'display: none;' %>">
        <%= current_user.received_notifications.unread.count %>
      </span>
    <%= defined?(show_text) && show_text ? '<h2 class="text-lg flex-grow">通知</h2>'.html_safe : '' %>
  <% end %>
</li>

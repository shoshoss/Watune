
<%= turbo_frame_tag 'login_modal' %>
<div class="navbar p-2 sm:px-4">
  <div class="flex items-center justify-between w-full">
    <!-- ロゴ -->
    <div class="mx-2 md-plus:mx-5 shrink-0">
      <%= link_to root_path, data: { turbo_frame: '_top'}, id: "header-logo-link" do %>
        <picture>
          <source srcset="/logo-watune.png" media="(min-width: 768px)">
          <img src="/logo-watune-en.png" alt="ロゴ" class="rounded-full h-[48px] w-[48px] md:h-[48px] md:w-[200px]">
        </picture>
      <% end %>
    </div>

    <!-- ナビゲーションリンク -->
    <div class="flex flex-1 justify-end items-center">

      <!-- 新規登録、ゲスト登録、ログインを開くリンク -->
      <%= link_to t('header.trial_login'), guest_login_path, method: :post, data: { turbo_frame: "_top" }, class: 'btn btn-outline btn-secondary btn-sm sm:btn-lg rounded-full transition-colors duration-300 mx-1 sm:mx-4' %>
      <%= link_to t('header.signup'), new_signup_modal_path, method: :get, data: { turbo_frame: "signup_modal" }, class: 'btn btn-outline btn-accent btn-sm sm:btn-lg rounded-full transition-colors duration-300 mx-1 sm:mx-4' %>
      <%= link_to t('header.login'), new_login_modal_path, method: :get, data: { turbo_frame: "login_modal" }, class: 'btn btn-outline btn-primary btn-sm sm:btn-lg rounded-full transition-colors duration-300 mx-1 sm:mx-4' %>

    </div>
  </div>
</div>

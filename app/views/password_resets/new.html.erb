<turbo-frame id="main-content">
<% content_for(:title, t('.title')) %>
<div class="flex justify-center min-h-screen p-5">
  <div class="max-w-lg w-full py-5 bg-white rounded-lg shadow-lg">
      <h1 class="text-3xl font-bold mt-4 mb-4 text-center">パスワードリセット</h1>
      <div class="text-lg text-center px-5">メールアドレスを入力しますと<br>パスワードのリセット方法に<br>関するメールが送信されます。</div>
      <%= form_with url: password_resets_path do |f| %>
        <div class="card-body mx-auto">
          <!-- メールアドレス入力 -->
          <div class="form-control">
            <%= f.label :email, class: "block text-base font-medium text-gray-700" %>
            <%= f.email_field :email, class: 'input input-bordered w-full' %>
          </div>
          <div class="form-control mt-4 lg:mt-6">
            <%= f.submit t('.submit'), class: "btn btn-primary w-full" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
</turbo-frame>

<div id="x-icon-<%= post.id %>">
  <% if post.open? %>
    <%= link_to x_share_post_url(post), target: "_blank", rel: "noopener noreferrer" do %>
      <i class="fa-brands fa-x-twitter text-lg text-black-500 hover:text-blue-500"></i>
    <% end %>
  <% else %>
    <%= link_to x_share_root_url, target: "_blank", rel: "noopener noreferrer" do %>
      <i class="fa-brands fa-x-twitter text-lg text-black-500 hover:text-blue-500"></i>
    <% end %>
  <% end %>
</div>

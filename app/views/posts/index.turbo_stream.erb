<%= turbo_stream.replace "main-content" do %>
  <%= render partial: 'posts/index', locals: { posts: @posts, post_category: @post_category, pagy: @pagy, notifications: @notifications } %>
<% end %>

<%= turbo_stream.update "after-widget" do %>
  <%= render 'shared/widget', users: @recent_users %>
<% end %>

<%= turbo_stream.update "flash" do %>
  <%= render 'shared/flash_message' %>
<% end %>
